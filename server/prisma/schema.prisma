generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  Admin
  Admin_Assistant @map("Admin Assistant")
  Employee
  User
}

model User {
  id                 String          @id @default(uuid())
  name               String
  emailAddress       String          @unique
  password           String
  phoneNumber        String          @unique
  role               Role
  profilePicture     Bytes?
  profilePictureType String?
  isVerified         Boolean         @default(false)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  PendingChange      PendingChange[]
}

model PendingChange {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name               String?
  emailAddress       String?
  phoneNumber        String?
  role               Role?
  profilePicture     Bytes?
  profilePictureType String?
  verificationCode   String
  createdAt          DateTime @default(now())
}

model Analytics {
  userIdentifier String @id @default(uuid())
  userAgentInfo  Json
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  pageVisits     PageVisit[] 
  baseUrl        String
}

model PageVisit {
  id          String    @id @default(uuid())
  analytics   Analytics @relation(fields: [analyticsId], references: [userIdentifier], onDelete: Cascade)
  analyticsId String
  path        String
  timestamp   DateTime
}

model WebsiteOrApp {
  id                            Int    @id @default(autoincrement())
  name                          String
  phoneNumber                   String
  emailAddress                  String
  productTier                   String
  describeYourDreamWebsiteOrApp String
  websiteStatus                 String
}
